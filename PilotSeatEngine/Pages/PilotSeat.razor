@page "/"
@page "/pilot-seat"
@using GameEngine
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Pilot Seat - Space Flight</PageTitle>

<div class="pilot-seat-container">
    <div class="hud-overlay">
        <!-- Ship Status Display -->
        <div class="ship-status">
            <div class="status-item">
                <span class="label">Speed:</span>
                <span class="value">@($"{_controller?.GetSpeed():F1}")</span>
            </div>
            <div class="status-item">
                <span class="label">Fuel:</span>
                <span class="value">@($"{_controller?.GetFuel():F0}%")</span>
            </div>
            <div class="status-item">
                <span class="label">Hull:</span>
                <span class="value">@($"{_controller?.GetHullIntegrity():F0}%")</span>
            </div>
            <div class="status-item">
                <span class="label">Shields:</span>
                <span class="value">@($"{_controller?.GetShieldPower():F0}%")</span>
            </div>
            <div class="status-item">
                <span class="label">Energy:</span>
                <span class="value">@($"{_controller?.GetEnergy():F0}%")</span>
            </div>
        </div>
        
        <!-- Scanner Display -->
        @if (_controller?.ScannerActive == true)
        {
            <div class="scanner-panel">
                <h3>Planet Scanner</h3>
                <div class="planet-list">
                    @if (_controller?.GetNearbyPlanets()?.Any() == true)
                    {
                        @foreach (var planet in _controller.GetNearbyPlanets())
                        {
                            <div class="planet-item" @onclick="() => SelectPlanet(planet)">
                                <strong>@planet.Name</strong>
                                <div class="planet-details">
                                    <div>Distance: @($"{planet.DistanceAu:F2} AU")</div>
                                    <div>Temp: @($"{planet.SurfaceTempCelsius:F1}°C")</div>
                                    <div>Gravity: @($"{planet.GravityG:F2}g")</div>
                                    <div>Atmosphere: @planet.AtmosphereDescription</div>
                                    <div>Resources: @planet.ResourceRichness%</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-planets">No planets detected in range</div>
                    }
                </div>
            </div>
        }
        
        <!-- Selected Planet Info -->
        @if (_controller?.SelectedPlanet != null)
        {
            <div class="selected-planet-info">
                <h3>Selected: @_controller.SelectedPlanet.Name</h3>
                <div class="planet-info-grid">
                    <div><strong>Distance:</strong> @($"{_controller.SelectedPlanet.DistanceAu:F2} AU")</div>
                    <div><strong>Temperature:</strong> @($"{_controller.SelectedPlanet.SurfaceTempK:F1}K") (@($"{_controller.SelectedPlanet.SurfaceTempCelsius:F1}°C"))</div>
                    <div><strong>Gravity:</strong> @($"{_controller.SelectedPlanet.GravityG:F2}g")</div>
                    <div><strong>Atmosphere:</strong> @_controller.SelectedPlanet.AtmosphereDescription</div>
                    <div><strong>Radius:</strong> @($"{_controller.SelectedPlanet.RadiusKm:F0} km")</div>
                    <div><strong>Rotation:</strong> @($"{_controller.SelectedPlanet.RotationPeriodHours:F1} hours")</div>
                    <div><strong>Resources:</strong> @_controller.SelectedPlanet.ResourceRichness%</div>
                    <div><strong>Water:</strong> @(_controller.SelectedPlanet.HasWater ? "Yes" : "No")</div>
                    <div><strong>Life:</strong> @(_controller.SelectedPlanet.HasLife ? "Detected" : "None")</div>
                </div>
                <button class="beam-button" @onclick="BeamToPlanet">Beam Down to Planet</button>
            </div>
        }
    </div>
    
    <!-- Control Panel -->
    <div class="control-panel">
        <div class="control-group">
            <h3>Flight Controls</h3>
            <div class="control-row">
                <label>Thruster:</label>
                <input type="range" min="0" max="100" value="@(_thrusterPower * 100)" @oninput="OnThrusterChange" />
                <span>@($"{_thrusterPower * 100:F0}%")</span>
            </div>
            <div class="control-row">
                <label>Pitch:</label>
                <input type="range" min="-100" max="100" value="@(_pitchInput * 100)" @oninput="OnPitchChange" />
                <span>@($"{_pitchInput * 100:F0}%")</span>
            </div>
            <div class="control-row">
                <label>Yaw:</label>
                <input type="range" min="-100" max="100" value="@(_yawInput * 100)" @oninput="OnYawChange" />
                <span>@($"{_yawInput * 100:F0}%")</span>
            </div>
            <div class="control-row">
                <label>Roll:</label>
                <input type="range" min="-100" max="100" value="@(_rollInput * 100)" @oninput="OnRollChange" />
                <span>@($"{_rollInput * 100:F0}%")</span>
            </div>
        </div>
        
        <div class="control-group">
            <h3>Systems</h3>
            <button class="control-button" @onclick="ToggleScanner">
                @(_controller?.ScannerActive == true ? "Disable" : "Enable") Scanner
            </button>
            <button class="control-button" @onclick="ExitPilotSeat">Exit Pilot Seat</button>
        </div>
    </div>
</div>

