@code {
    private PilotSeatController? _controller;
    private SpaceShip? _ship;
    private List<Planet> _planets = new();
    private float _thrusterPower = 0.0f;
    private float _pitchInput = 0.0f;
    private float _yawInput = 0.0f;
    private float _rollInput = 0.0f;
    private bool _isDisposed = false;
    private CancellationTokenSource? _updateCancellation;
    
    protected override async Task OnInitializedAsync()
    {
        // Initialize planets from database
        _planets = PlanetDatabase.GetAllPlanets();
        
        // Create ship
        _ship = new SpaceShip
        {
            Position = new System.Numerics.Vector3(0, 0, 0),
            Fuel = 100.0f,
            HullIntegrity = 100.0f,
            ShieldPower = 100.0f
        };
        
        // Create pilot seat controller
        _controller = new PilotSeatController(_ship, _planets);
        _controller.Activate();
        
        // Start update loop
        _updateCancellation = new CancellationTokenSource();
        _ = StartUpdateLoop(_updateCancellation.Token);
        
        await base.OnInitializedAsync();
    }
    
    private async Task StartUpdateLoop(CancellationToken cancellationToken)
    {
        while (!cancellationToken.IsCancellationRequested && !_isDisposed)
        {
            if (_controller != null)
            {
                _controller.Update(0.016f); // ~60 FPS
                StateHasChanged();
            }
            await Task.Delay(16, cancellationToken); // ~60 FPS
        }
    }
    
    private void OnThrusterChange(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value?.ToString(), out float value))
        {
            _thrusterPower = value / 100.0f;
            _controller?.SetThrusterPower(_thrusterPower);
        }
    }
    
    private void OnPitchChange(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value?.ToString(), out float value))
        {
            _pitchInput = value / 100.0f;
            _controller?.SetPitchInput(_pitchInput);
        }
    }
    
    private void OnYawChange(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value?.ToString(), out float value))
        {
            _yawInput = value / 100.0f;
            _controller?.SetYawInput(_yawInput);
        }
    }
    
    private void OnRollChange(ChangeEventArgs e)
    {
        if (float.TryParse(e.Value?.ToString(), out float value))
        {
            _rollInput = value / 100.0f;
            _controller?.SetRollInput(_rollInput);
        }
    }
    
    private void ToggleScanner()
    {
        _controller?.ToggleScanner();
    }
    
    private void SelectPlanet(Planet planet)
    {
        _controller?.SelectPlanet(planet);
    }
    
    private async Task BeamToPlanet()
    {
        if (_controller?.SelectedPlanet != null)
        {
            // Call JavaScript to beam to planet (bridge to C/WASM)
            await JSRuntime.InvokeVoidAsync("beamToPlanetFromCSharp", _planets.IndexOf(_controller.SelectedPlanet));
        }
    }
    
    private async Task ExitPilotSeat()
    {
        // Exit pilot seat and return to spaceship interior
        await JSRuntime.InvokeVoidAsync("exitPilotSeat");
    }
    
    public async ValueTask DisposeAsync()
    {
        _isDisposed = true;
        _updateCancellation?.Cancel();
        _updateCancellation?.Dispose();
        _controller?.Deactivate();
        await Task.CompletedTask;
    }
}

